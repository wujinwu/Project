<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_fff"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_titles"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/c_1296db"
        android:gravity="center_vertical"
        android:paddingStart="18dp"
        android:paddingTop="20dp"
        android:text="播放器"
        android:textColor="@color/c_fff"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_title" />


    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:src="@mipmap/icon_more" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="0000"
        android:textColor="@color/c_1296db"
        android:textSize="18sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:maxHeight="6dp"
        android:minHeight="6dp"
        android:progress="0"
        android:progressDrawable="@drawable/seekbar_yellowl_video"
        android:thumb="@drawable/seekbar_yellow_sound"
        android:thumbOffset="0dip" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar"
        android:layout_marginStart="23dp"
        android:layout_marginTop="6dp"
        android:text="00:00"
        android:textColor="@color/c_1296db"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="23dp"
        android:text="00:00"
        android:textColor="@color/c_1296db"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_end_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@mipmap/icon_start" />

    <RelativeLayout
        android:id="@+id/rl_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="208dp"
        android:background="@drawable/bg_top_slide16_fff_d5d5d5"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/icon_close" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_close"
            android:layout_margin="16dp" />
    </RelativeLayout>
</RelativeLayout>